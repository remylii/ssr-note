{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 2, {
              "SwitchCase": 1,
              "VariableDeclarator": 1,
              "outerIIFEBody": 1
            }
        ],
        "linebreak-style": [2, "unix"],
        "quotes": [1, "double"],
        "semi": [1, "always"],
        "react/jsx-uses-vars": 2
    }
}

